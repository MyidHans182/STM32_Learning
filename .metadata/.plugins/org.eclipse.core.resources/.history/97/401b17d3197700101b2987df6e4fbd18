//#include "stm32f4xx.h"
#include "stm32f446xx.h"

#define GPIOAEN (1U << 0)
#define	PIN5	(1U << 5)
#define LED_PIN PIN5


#define GPIOCEN (1U << 2)
#define	PIN13	(1U << 13)
#define BTN_PIN PIN13

int main(void)
{
	/*Enable clock access to GPIOA and GPIOC	*/
	RCC -> AHB1ENR |=  GPIOAEN;
	RCC -> AHB1ENR |=  GPIOCEN;

	/*Set PA5 as output pin */
	GPIOA -> MODER |=  (1U <<10);
	GPIOA -> MODER &=~ (1U <<11);

	/*Set  PC13 as input pin*/
	GPIOC -> MODER &=~ (1U <<26);
	GPIOC -> MODER &=~ (1U <<27);





	while(1)
	{


		/*Check BTN is pressed*/
		if(GPIOC->IDR & BTN_PIN)
		{
			GPIOA -> BSRR = LED_PIN; // already set at pin 5 BS5
//			for(int i = 0; i< 100000;i++ )// Delay
//			{
//
//			}
		}
		else
		{
			GPIOA -> BSRR = (1U<<21); // already set at pin 5 BS5
//			for(int i = 0; i< 100000;i++ ) // Delay
//			{
//
//			}
		}


	}
}
